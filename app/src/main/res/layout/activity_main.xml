<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/et_user"

        android:text="login account"
        android:textSize="50dp"
        android:textAllCaps="true"
        android:textColor="#000000"
        tools:ignore="MissingConstraints" />

    //Enter User Name
    <EditText
        android:id="@+id/et_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/et_password"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        android:hint="User Name"
        android:textSize="25dp"
        android:padding="10dp" />

    //Enter password
    <EditText
        android:id="@+id/et_password"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:hint="Password"
        android:textSize="25dp"
        android:padding="10dp"/>

    //Enter manager name
    <EditText
        android:id="@+id/et_manager"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/et_password"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"

        android:hint="Manager Name"
        android:textSize="25dp"
        android:padding="10dp"/>

    //CheckBox Remember Account
    <CheckBox
        android:id="@+id/cb_remember"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/et_manager"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="25dp"

        android:text="Remember Account"
        android:textSize="25dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints" />

    //Button Login
    <Button
        android:id="@+id/bt_login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/cb_remember"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_list"

        android:layout_marginTop="25dp"

        android:text="LOGIN"
        android:textSize="25dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints"

        android:onClick="onButtonLogin"/>

    //Button List
    <Button
        android:id="@+id/bt_list"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/cb_remember"
        app:layout_constraintLeft_toRightOf="@+id/bt_login"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="25dp"

        android:text="LIST"
        android:textSize="25dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints"

        android:onClick="onButtonList"/>

</androidx.constraintlayout.widget.ConstraintLayout>